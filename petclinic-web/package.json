{
  "name": "spring-petclinic-reactjs",
  "version": "0.0.1",
  "description": "Spring Boot Pet Clinic Sample Application with React Frontend",
  "main": "index.js",
  "repository": "https://github.com/spring-petclinic/spring-petclinic-reactjs",
  "scripts": {
    "postinstall": "typings install",
    "install-types": "typings install",
    "test": "jest",
    "test:watch": "jest --watchAll --no-cache",
    "start": "node server.js",
    "build:clean": "rimraf ./public/dist && webpack --config webpack.config.js",
    "build:prod": "rimraf ./public/dist && NODE_ENV=production webpack --config webpack.config.prod.js"
  },
  "author": "Nils Hartmann",
  "license": "ISC",
  "dependencies": {
    "@types/moment": "^2.x",
    "bootstrap": "^3.x",
    "classnames": "^2.x",
    "moment": "^2.x",
    "nyc": "^13.x",
    "react": "^15.x",
    "react-datepicker": "^0.x",
    "react-dom": "^15.x",
    "react-router": "^4.x",
    "redbox-react": "^1.x",
    "whatwg-fetch": "^1.x"
  },
  "devDependencies": {
    "babel-core": "^6.x",
    "babel-loader": "^6.x",
    "babel-preset-es2015": "^6.x",
    "babel-preset-react": "^6.x",
    "babel-preset-stage-0": "^6.x",
    "chalk": "^1.x",
    "cross-env": "^1.x",
    "css-loader": "^2.x",
    "enzyme": "^3.x",
    "extract-text-webpack-plugin": "^1.x",
    "file-loader": "^3.x",
    "jest": "^23.x",
    "jest-fetch-mock": "^1.x",
    "less": "^2.x",
    "less-loader": "^2.x",
    "react-addons-test-utils": "^15.x",
    "react-hot-loader": "^3.x",
    "rimraf": "^2.x",
    "style-loader": "^0.x",
    "ts-jest": "^23.x",
    "ts-loader": "^0.x",
    "tslint": "^3.x",
    "tslint-loader": "^2.x",
    "typescript": "~2.x",
    "typings": "^1.x",
    "url-loader": "^1.x",
    "webpack": "^4.x",
    "webpack-dev-server": "^1.x"
  },
  "jest": {
    "scriptPreprocessor": "./node_modules/ts-jest/preprocessor.js",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
